<%- include('../partials/header') -%>
  <%- include('../partials/navbar') -%>
    <div class="container">
      <div class="row mt-4">
        <div class="col-md-9 offset-md-1">
          <h1 class="display-4">Create Event:</h1>
          <hr>
          <% locals.errors.forEach(err=>{%>
            <div class="alert alert-danger">
              <%= err.msg%>
            </div>
            <%})%>
              <form action="/events/create/createEvent" method="post">
                <div class="form-group">
                  <label for="title">Create new event</label>
                  <input type="text" name="title" id="title" class="form-control">
                </div>
                <div class="form-group">
                  <label for="description">Description</label>
                  <textarea type="text" name="description" id="description" rows="4" class="form-control"></textarea>
                </div>
                <div class="form-group">
                  <label for="location">Location</label>
                  <input type="text" name="location" id="location" class="form-control">
                </div>
                <div class="form-group">
                  <label for="date">Date</label>
                  <%let today=new Date().toJSON().slice(0,10); %>
                    <input type="date" name="date" id="date" min="<%= today%>" class="form-control">
                </div>
                <div class="form-group d-flex mt-2">
                  <button type="submit" class="btn btn-primary mx-auto">Create</button>
                </div>
              </form>
        </div>
      </div>
    </div>
    <%- include('../partials/footer') -%>